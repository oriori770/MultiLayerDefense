@model Multi_Layer_Defense.Models.Interceptor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Interceptor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterceptsThrough" class="control-label"></label>
                <select asp-for="InterceptsThrough"  asp-items="ViewBag.counterMeasure" class="form-control">

                </select>
                <span asp-validation-for="InterceptsThrough" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ForType" class="control-label"></label>
                <select asp-for="ForType"  asp-items="ViewBag.Weapon" class="form-control">

                </select>
                <span asp-validation-for="ForType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
