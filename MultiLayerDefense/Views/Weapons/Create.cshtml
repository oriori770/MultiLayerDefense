@model Multi_Layer_Defense.Models.Weapon

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Weapon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Speed" class="control-label"></label>
                <input asp-for="Speed" class="form-control" />
                <span asp-validation-for="Speed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EffectiveDistance" class="control-label"></label>
                <input asp-for="EffectiveDistance" class="form-control" />
                <span asp-validation-for="EffectiveDistance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CounterMeasure" class="control-label"></label>
                <select asp-for="CounterMeasure" asp-items="ViewBag.Weapon" class="form-control">
                    <option value="" disabled selected>Select Shelf</option>
                </select>
                <span asp-validation-for="CounterMeasure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
